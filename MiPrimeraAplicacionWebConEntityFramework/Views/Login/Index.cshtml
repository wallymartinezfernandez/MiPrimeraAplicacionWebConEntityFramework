@using MiPrimeraAplicacionWebConEntityFramework.Models
@model UsuarioCLS
@{
    Layout = null;
}

<html>
<head>
    <title>sistema de login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- vinculo a bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Temas-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- se vincula al hoja de estilo para definir el aspecto del formulario de login-->
    <style>
        body {
            font-size: 12px;
        }

        #Contenedor {
            width: 400px;
            margin: 50px auto;
            background-color: #F3EDED;
            border: 1px solid #ECE8E8;
            height: 400px;
            border-radius: 8px;
            padding: 0px 9px 0px 9px;
        }


        .Icon span {
            background: #A8A6A6;
            padding: 20px;
            border-radius: 120px;
        }

        .Icon {
            margin-top: 10px;
            margin-bottom: 10px;
            color: #FFF;
            font-size: 50px;
            text-align: center;
        }

        .opcioncontra {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div id="Contenedor">
        <div class="Icon">
            <!--Icono de usuario-->
            <span class="glyphicon glyphicon-user"></span>
        </div>
        <div class="ContentForm">
            @using (Ajax.BeginForm("Login", "Login", "",new AjaxOptions
            {
                HttpMethod="POST",
                OnSuccess="Ingresar",
                UpdateTargetId="divRespuesta"
            },new { @id = "frmLogin" }))
            {
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
                    @Html.TextBox("nombreusuario", null, new { @class = "form-control", @placeholder = "Usuario", @required = "true" })
                </div>
                <br>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.Password("contra", null, new { @class = "form-control", @placeholder = "*******", @required = "true" })
                </div>
                <br>

                <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
                <div class="opcioncontra"><a id="btnOlvideContra" data-toggle="modal" data-target="#exampleModal">Olvidaste tu contraseña?</a></div>

                <div id="divRespuesta"></div>
            }

         
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Ajax.BeginForm("RecuperarContra", "Login", null, new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnSuccess = "Recuperar",
                    UpdateTargetId = "error"
                }))
                {
                    @Html.Hidden("titulo")
                    <div class="modal-body">
                        <div>
                            @Html.Label("Indicar si es cliente o empleado")
                           <select name="IIDTIPO" id="IIDTIPO">
                               <option value="C">Cliente</option>
                           </select>
                        </div>
                        <div>
                            @Html.Label("Correo")
                            @Html.TextBox("correo", null, new { @class = "form-control" ,@type="email"})
                        </div>
                        <div>
                            @Html.Label("Telefono Celular")
                            @Html.TextBox("telefonoCelular", null, new { @class = "form-control" ,@type="number" })
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnClose" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                }
                <div id="error"></div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

</body>



</html>

<script>

    function Recuperar(rpta) {
        if (rpta == "1") {
            alert("Se envio la clave al correo");
            document.getElementById("btnClose").click();

        } else {
            alert("Ocurrio un error");

        }
    }


    function Ingresar(rpta) {

        if (rpta == "1") {
            document.location.href = "@Url.Action("Index", "PantallaPrincipal")";
            document.getElementById("divRespuesta").innerHTML = "";
        } else {
            alert("Usuario o contraseña incorrecta");
        }


    }


</script>